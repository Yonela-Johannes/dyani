<div class="main-search-container">
    <div class="product border">
        <div class="product-head">
            <img src="/img/dollar.png" alt="" class="header_image" />
        <p class="title">Customers</p>
        </div>
        <p class="displayMessage {{con}}">{{displayMessage}}</p>
    <table>
        <tr>
            <th>Name</th>
            <th>Last Name</th>
            <th>email</th>
            <th>phone</th>
        </tr>
            {{#each users}}
            <tr>
                <td>
                    <a href="/admin/{{name}}">
                        {{name}}
                    </a>
                </td>
                <td>
                    {{lastname}}
                </td>
                <td>
                    {{email}}
                </td>
                <td>
                    {{phone}}
                </td>
            </tr>
            {{/each}}
    </table>
    </div>
    <div class="sep border">
        <div class="message">{{message}}</div>
        <div class="product-head">
            <img src="/img/addshoe.png" alt="" class="header_image" />
            <p class="title">Add New Shoe</p>
        </div>
        <div class="add_containers  border">
            <div class="welcome">
                <form action="/admin/add-shoe" method="post">
                    <div class="description_container">
                        <div class="name_container">
                            <div>
                                <p class="details_label">Name</p>
                                <input name='name' type="text" placeholder="Enter shoe name...">
                            </div>
                            <div>
                                <p class="details_label">Brand</p>
                                <input name="brand" type="text" placeholder="Enter shoe brand...">
                            </div>
                            <div>
                                <p class="details_label">Price</p>
                                <input name="price" type="number" step={0.5} placeholder="Enter shoe price..." min='1'>
                            </div>
                        </div>
                    </div>
            </div>
            <div class="welcome">
                <div class="description_container">
                    <div class="name_container">
                        <div>
                            <p class="details_label">Gender</p>
                            <select name="gender">
                                <option disabled selected hidden value="">Select Gender</option>
                                <option value="male">Male</option>
                                <option value="female">Female</option>
                            </select>
                        </div>
                        <div>
                            <select name="color">
                                <option disabled selected hidden value="">Select color</option>
                                <option value="white">White</option>
                                <option value="black">Black</option>
                                <option value="brown">Brown</option>
                            </select>
                        </div>
                        <div>
                            <p class="details_label">Quantity</p>
                            <input name="in_stock" type="number" step={0.5}
                                placeholder='Enter shoe quantity in stock..' min='1'>
                        </div>
                        <div>
                            <p class="details_label">Size</p>
                            <input name="size" placeholder='Enter shoe size..' type="number" min='1'>
                        </div>
                        <div class="input_container">
                            <p class="details_label">Image</p>
                            <input id="image" name="image" type="file" />
                        </div>
                    </div>
                </div>
                <button type="submit">Add To Shop</button>
            </div>
            </form>
        </div>
    </div>
</div>