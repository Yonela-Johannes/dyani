<div class="product border">
    <div class="product-head">
                <p class="title">Your Payment Details</p>
        <img src="/img/infoone.png" alt="" class="payment_image" />
    </div>
    <table class="payment">
        {{#user}}
        <tr>
            <th>Name</th>
            <th>Last Name</th>
            <th>Phone Nr.</th>
            <th>Email</th>
        </tr>
        <tr>
            <td>{{name}}</td>
            <td>{{lastname}}</td>
            <td>{{phone}}</td>
            <td>{{email}}</td>
        </tr>
        {{/user}}
</div>

<div class="welcome_image_container_two">
    <img src="/img/info.png" alt="" class="welcome_image_two" />
    <tr>
        <th>Shoe Id</th>
        <th>Name</th>
        <th>Brand</th>
        <th>Gender</th>
        <th>Price</th>
        <th>Total Shoe/s</th>
        <th>Purchase date</th>
        <th>Shoe Image</th>
    </tr>
    {{#each cartResults}}
    {{#each .}}
        <tr>
            <td>{{id}}</td>
            <td>{{name}}</td>
            <td>{{brand}}</td>
            <td>{{gender}}</td>
            <td>R {{price}}</td>
            <td>{{buying_amount}}</td>
            <td>{{dateFormatTwo payment_date}}</td>
            <td>
                <img class="stock_shoe" src="data:text/html;base64,{{image}}" alt="shoe" />
            </td>
        </tr>
    {{/each}}
    {{/each}}
    </table>
</div>

<div class="welcome_image_container_two">
    <img src="/img/info.png" alt="" class="welcome_image_two" />
</div>