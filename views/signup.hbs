<div class="welcome_main_container">
    <div class="message">{{message}}</div>
        <p class="title">Welcome</p>
    <div class="welcome">
            <form action="/signup" method="post">
            <div class="description_container">
                    <div>
                        <div class="container">
                            <div>
                                <input name="name" value="" type="text" placeholder="Enter name" />
                            </div>
                            <div>
                                <input name="lastname" value="" type="text" placeholder="Enter last name" />
                            </div>
                        </div>
                        <div class="container">
                            <div>
                                <input name="email" value="" type="email" placeholder="Enter email" />
                            </div>
                            <div>
                                <input name="password" value="" type="password" placeholder="Enter password" />
                            </div>
                        </div>
                    </div>
            </div>
         <div >
                <div class="proceed">
                    <button type="submit">Sign up</button>
                </div>
            </div>
            </form>
        <p class="sign">Do have an account?
            <a href="/signin">
                Sign in
            </a>
            instead.
        </p>
    </div>
</div>
<div class="welcome_image_container_two">
    <img src="/img/star_drawing.jpg" alt="" class="welcome_image_two" />
</div>